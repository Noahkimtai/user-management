# Server port
PORT="8080"

# Database connection URL (example for MongoDB)
DB_URL="mongodb://localhost:27017/users"

# MongoDB Init Credentials (used by Docker container)
MONGO_INITDB_DATABASE=users
MONGO_INITDB_USERNAME=admin
MONGO_INITDB_PASSWORD=admin123

# Crypto secret (used for encrypting/decrypting data)
CRP_SECRET="supersecretkey123456"

# Number of rounds for key derivation (used with crypto.pbkdf2 or similar)
CRP_ITERATIONS=10000

# Key size in bits for crypto algorithms (e.g., 256 for AES-256)
CRP_KEYSIZE=32

# Algorithm for encryption (e.g., AES)
CRP_ALGO="aes-256-cbc"

# JWT secret key for signing/verifying tokens
JWT_SECRET="yourjwtsecretkeyhere"

# Salt rounds for bcrypt password hashing
BCR_SALT=10